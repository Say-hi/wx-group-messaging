<!--我的-->
<view class="top bd1">
  <view class="t-img" catchtap="goNameCard">
    <image class="br" src="{{ user.img }}"></image>
  </view>
  <view class="t-c">
    <view class="ell1 t-name c3">{{ user.name }}</view>
    <view class="ell1 t-phone c9">{{ user.phone }}</view>
    <view catchtap="goNameCard" class="ell1 t-mp iconfont {{ user.status == 0 ? 'icon-bianji' : 'icon-dianzan' }}">{{ user.status == 0 ? '创建名片' : '分享名片' }}</view>
  </view>
  <view catchtap="edit" class="arrow c9">
    编辑
  </view>
</view>

<view class="top-b f30 c3">
  <view catchtap="goWallet" class="bb bd1 iconfont icon-qianbao">钱包</view>
  <view class="bb bd1 iconfont icon-pengyouquan">群友圈</view>
</view>

<navigator url="{{ item.url }}" wx:for="{{ operation }}" class="bb bd1 {{ index == 0 ? 'co' : index == 1 ? 'pink' :  '' }} f30 c3 arrow u-operation iconfont {{ item.ico }}">{{ item.t }}</navigator>

<view catchtap="showGzh" class="tac">关注公众号“群信息”</view>
        <!--错误弹窗-->
<import src="../template/template"></import>
<template wx:if="{{ toast.show }}" is="showToast" data="{{ ...toast }}"></template>
<!--公众号弹窗-->
<template wx:if="{{ gzh.show }}" is="showGzh" data="{{ ...gzh }}"></template>