        <!--错误弹窗-->
<import src="../template/template"></import>
<template wx:if="{{ toast.show }}" is="showToast" data="{{ ...toast }}"></template>
<!--图文模式-->
<template name="tw">
    <!--<view wx:if="{{ cur == 0 || cur == 1 }}" class="bd1 bb">-->
    <view class="bd1 bb {{ cur == 2 || cur == 3 ? 'hide' : '' }}">
    <!--<view hidden="{{ cur == 3 || cur == 2 }}" class="bd1 bb">-->
        <!--{{cur}}-->
        <view class="f-user-img-w">
            <image class="f-user-img" src="{{ image }}"></image>
        </view>

        <view catchtap="goDetail" data-id="{{ id }}" class="f-r tw">
            <view class="f-name f30"><text>{{ name }}</text><text class="iconfont icon-guanbi2"></text></view>
            <view class="ell2 c3">{{ content }}</view>
            <view class="f-img">
                <image wx:for="{{ contentImg }}" wx:for-item="img" src="{{ img }}"></image>
            </view>
            <view class="address ell1">{{ address }}</view>
            <view class="time c9">{{ time }}</view>
            <view class="qun">
                <view class="iconfont icon-shequn ell1">{{ qun }}</view>
                <view class="iconfont icon-zan1 c9">{{ xin }}</view>
                <view class="iconfont icon-pinglun c9">{{ talk }}</view>
            </view>
        </view>
    </view>
</template>
<!--语音模式-->
<template name="yy">
<!--<view  wx:if="{{ cur == 0 || cur == 2 }}" class="bd1 bb">-->
<view  class="bd1 bb {{ cur == 1 || cur == 3 ? 'hide' : '' }}">
<!--<view hidden="{{ cur == 0 || cur == 3 }}" class="bd1 bb">-->
    <view class="f-user-img-w">
        <image class="f-user-img" src="{{ image }}"></image>
    </view>
    <view catchtap="goDetail" data-id="{{ id }}" class="f-r yy">
        <view class="f-name f30"><text>{{ name }}</text><text class="iconfont icon-guanbi2"></text></view>
        <view class="ell2 c3">{{ content }}</view>
        <view class="yy-img">
            <image src="../../images/yuying.png"></image>
        </view>
        <view class="address ell1">{{ address }}</view>
        <view class="time c9">{{ time }}</view>
        <view class="qun">
            <view class="iconfont icon-shequn ell1">{{ qun }}</view>
            <view class="iconfont icon-zan1 c9">{{ xin }}</view>
            <view class="iconfont icon-pinglun c9">{{ talk }}</view>
        </view>
    </view>
</view>
</template>
<!--文章模式-->
<template name="wz">
<!--<view wx:if="{{ cur == 0 || cur == 3 }}" class="bd1 bb">-->
<view class="bd1 bb {{ cur == 2 || cur == 1 ? 'hide' : '' }}">
<!--<view hidden="{{ cur == 1 || cur == 2 }}" class="bd1 bb">-->
<view class="f-user-img-w">
    <image class="f-user-img" src="{{ image }}"></image>
</view>
<view catchtap="goDetail" data-id="{{ id }}" class="f-r wz">
    <view class="f-name f30"><text>{{ name }}</text><text class="iconfont icon-guanbi2"></text></view>
    <view class="ell2 c3 wz-b">{{ content }}</view>
    <view class="wz-wrap">
        <view class="wz-w-img">
            <image src="{{ wzimg }}"></image>
        </view>
        <view class="ell2 c3">{{ wztitle }}</view>
    </view>
    <view class="address ell1">{{ address }}</view>
    <view class="time c9">{{ time }}</view>
    <view class="qun">
        <view class="iconfont icon-shequn ell1">{{ qun }}</view>
        <view class="iconfont icon-zan1 c9">{{ xin }}</view>
        <view class="iconfont icon-pinglun c9">{{ talk }}</view>
    </view>
</view>
</view>
</template>