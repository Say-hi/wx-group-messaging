<!--首页-->
<view class="top-search bd1">
    <view catchtap="goSearch" class="t-s-wrap pr">
        <text class="iconfont icon-tubiao17"></text>
        <input disabled="true" class="t-s-input br15 bb" placeholder="试试搜索更多感兴趣的社群"/>
    </view>
    <view catchtap="goClassify" class="t-classify f30 c3 tac">分类</view>
</view>

<view class="user-info">
    <view class="u-count c9 bd1">我的社群({{ user.group.length || 0 }})</view>
    <view class="u-group bd1" wx:for="{{ user.group }}">
        <image class="br" lazy-load="true" src="{{ item.image }}"></image>
        <view class="u-info">
            <view class="f30 c3 ell1">{{ item.group_name }}</view>
            <view class="c9 ell1">{{ item.name }}</view>
        </view>
        <view data-id="{{ item.id }}" data-op="{{ item.has_op }}" data-index="{{ index }}" catchtap="qunOp" class="iconfont icon-fenlei1"></view>
    </view>
    <view catchtap="create" class="tac u-build iconfont icon-tianjia1">创建社群</view>
</view>

<view class="recommend">
    <view class="r-nav bd1">
        <view catchtap="chooseNav" data-type="0" class="f30 c3 {{ cur == 0 ? 'choose' : '' }}">热群推荐</view>
        <view catchtap="chooseNav" data-type="1" class="f30 c3 {{ cur == 1 ? 'choose' : '' }}">应用推荐</view>
    </view>
    <view class="u-group-w">
        <view class="u-group bd1" wx:for="{{ recommendArr }}">
            <image class="br" lazy-load="true" src="{{ item.image }}"></image>
            <view class="u-info">
                <view class="f30 c3 ell1">{{ item.group_name }}</view>
                <view class="c9 ell1">{{ item.name }}</view>
            </view>
            <view data-id="{{ item.id }}" catchtap="goNext" data-cur="{{ cur }}" class="u-r br15">{{ cur == 0 ? '看一看' : '用一用' }}</view>
        </view>
    </view>
    <view class="bd1 more arrow">
        更多社群
    </view>
</view>
        <!--错误弹窗-->
<import src="../template/template"></import>
<template wx:if="{{ toast.show }}" is="showToast" data="{{ ...toast }}"></template>