<!--社群分类-->
<!--左侧-->
<view class="left-w bb">
  <scroll-view class="left bb" scroll-y="true">
    <view catchtap="chooseI" data-index="{{ index }}" class="l-t tr7 bb f24 c3 {{ chooseIndex == index ? 'l-t-c' : '' }}" wx:for="{{ leftArr }}">{{ item }}</view>
  </scroll-view>
</view>
<!--右侧-->
<view class="right-w bb">
  <scroll-view class="right bb" scroll-y="true">
    <view class="right-i-w bb bd1" wx:for="{{ rightArr }}">
      <view class="r-i-w-img">
        <image lazy-load="true" mode="aspectFill" class="br" src="{{ item.img }}"></image>
      </view>
      <view class="r-i-w-t bb">
        <view class="ell1 f30 c3">{{ item.qun_name }}</view>
        <view class="ell1 c9">{{ item.hold }}</view>
      </view>
    </view>
  </scroll-view>
</view>
        <!--错误弹窗-->
<import src="../template/template"></import>
<template wx:if="{{ toast.show }}" is="showToast" data="{{ ...toast }}"></template>