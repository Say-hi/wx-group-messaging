<!--消息-->
<view class="find-time bd1">{{ time }}<picker bindchange="chooseTime" mode="date" ><view class="c9 iconfont icon-rili"></view></picker></view>

<view class="bb bd1 f-wrap" wx:for="{{ lists }}" wx:key="*this">
  <view class="f-img-w">
    <image lazy-load="true" class="br" src="{{ item.image }}"></image>
  </view>
  <view class="f-c">
    <view class="ell1 f30">{{ item.content }}</view>
    <view class="f-time">{{ item.time }}</view>
  </view>
  <view class="f-status">
      <view class="br15 f-check" wx:if="{{ item.status == 0 }}">查看</view>
      <view class="br15 f-zan c9" wx:if="{{ item.status == 1 }}">已赞</view>
      <view class="br15 f-money" wx:if="{{ item.status == 2 }}">续费 </view>
  </view>
</view>
<!--消息数量-->
<view wx:if="{{ messageCount * 1 > 0 }}" class="message-count br15 iconfont icon-xinfeng2">
    {{ messageCount }}
</view>
        <!--错误弹窗-->
<import src="../template/template"></import>
<template wx:if="{{ toast.show }}" is="showToast" data="{{ ...toast }}"></template>
